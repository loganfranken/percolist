extends layout

block content
  div(class='row')
    div(class='col-sm-6')
      div(class='coffee-map')
        p Loading map...
    div(class='col-sm-6')
      h1 Percolist
      div(class='coffee-list')
        p Loading shops...

    script(id='coffee-table-template', type='x-tmpl-mustache')
      table(class='table table-striped table-hover')
        thead
          tr
            th Name
            th Last Visited
        tbody
          | {{#locations}}
          tr
            td {{name}}
            td
              span(class='label label-default') Never Visited
          | {{/locations}}

    script(id='coffee-map-template', type='x-tmpl-mustache')
      google-map(zoom='15', latitude='{{latitude}}', longitude='{{longitude}}')
        | {{#locations}}
        google-map-marker(latitude='{{location.coordinate.latitude}}', longitude='{{location.coordinate.longitude}}')
        | {{/locations}}
